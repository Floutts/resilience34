{# empty Twig template #}
{% extends "base.html.twig" %}
{% block image %}

    {% if form.valide == false %}
        <div class="alert alert-danger h3 mb-3 font-weight-normal" role="alert">
            {{ form.message }}
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous !</h1>
    <form method="POST" class="form-signin">
        <label for="email" class="sr-only">Email:</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
        <label for="mdp" class="sr-only">Mot de passe:</label>
        <input type="password" name="mdp" id="mdp" class="form-control" placeholder="Mot de passe" required>
        <button class="btn btn-sm btn-primary btn-block" type="submit" name="btConnexion">Se connecter</button>
        <input type="hidden" name="etape" id="etape" value="{% if etape is defined %}{{etape}}{% else %}1{% endif %}">

    </form>
    
{% endblock %}